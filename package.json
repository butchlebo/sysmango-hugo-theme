{
  "name": "sysmango-hugo-theme",
  "version": "1.0.0",
  "description": "SysMango Hugo Theme with Tailwind CSS",
  "scripts": {
    "dev": "hugo server",
    "build": "hugo --gc --minify",
    "start": "hugo server --disableFastRender",
    "tailwind:dev": "tailwindcss -i ./assets/css/main.css -o ./static/css/style.css --watch",
    "tailwind:build": "tailwindcss -i ./assets/css/main.css -o ./static/css/style.css --minify"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  }
}
